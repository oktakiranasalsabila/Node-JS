<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
           <% if (!contact) { %>
            <div class="alert alert-danger" role="alert">
               Data Contact tidak ada <a href="#" class="alert-link">kembali</a>. 
              </div>
           <% }else{ %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/edit/<%=  contact.nama %>"class="btn btn-primary badge rounded-pill" >Edit</a>
                  <!-- <a href="/contact/delete/<%=  contact.nama %>"class="btn btn-danger badge rounded-pill" onclick="return confirm('yakin?');"></i>Hapus</a> -->
                  <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                    <input type="hidden" name="nama" value="<%=  contact.nama %>">
                    <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('yakin?');">hapus</button>
                  </form>
                  <a href="/contact" class="btn btn-success badge rounded-pill">back</a>
                
                </div>
              </div>
              <% } %>
        </div>
    </div>
</div>