<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Edit data Contact</h2>
            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>" />
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" name="nama" required
                        value="<%= contact.oldNama ? contact.oldNama : contact.nama %>" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required
                        value="<%= contact.email %>" />
                </div>
                <div class="mb-3">
                    <label for="nohp" class="form-label">Handphone</label>
                    <input type="text" class="form-control" id="nohp" name="nohp" required
                        value="<%= contact.nohp %>" />
                </div>
                <button type="submit" class="btn btn-primary">Edit data Contact</button>
            </form>
        </div>
    </div>
</div>
